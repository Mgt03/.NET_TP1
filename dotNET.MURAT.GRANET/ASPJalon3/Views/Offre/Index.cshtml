@model System.Collections.Generic.List<Bibliotheque.Entity.Offre>

<h2>Liste des offres</h2>
<form method="get" action="@Url.Action("Search", "Offre")">
    <input type="text" name="searchTerm" value="" />
    <button type="submit">Rechercher</button>
</form>
@if (Model.Count == 0)
{
    <p>Aucun résultat trouvé.</p>
}
else
{
    <ul>
        @foreach (var offre in Model)
        {
            <li>
                <a href="@Url.Action("Details", new { id = offre.Id })">@offre.Intitule</a>
            </li>
        }
    </ul>
}