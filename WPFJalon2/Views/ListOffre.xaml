<UserControl x:Class="WPFJalon2.Views.ListOffre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFJalon2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView ItemsSource="{Binding Offres}" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Offre Information">

                    <GridViewColumn DisplayMemberBinding="{Binding Path=Intitule}" Header="Intitule" Width="100"/>

                    <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Width="100"/>

                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="Employee No." Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
